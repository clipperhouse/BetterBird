{
  "name": "BetterBird",
  "version": "0.1",
  "description": "Makes Twitter a bit better",
"icons": { "16": "twitter_16.png",
           "32": "twitter_32.png",
           "64": "twitter_64.png",
           "128": "twitter_128.png"
         },
  "browser_action": {
    "default_icon": "twitter_64.png"
  },
  "content_scripts": [
    {
      "matches": ["http://twitter.com/*", "https://twitter.com/*"],
      "css": ["styles.css"]
    }
  ],
  "permissions": [
    "tabs", "*//twitter.com/*"
  ]
}