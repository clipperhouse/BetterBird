{
  "name": "Better Bird",
  "version": "0.3.2",
  "description": "Makes Twitter a bit better",
  "background_page": "background.html",
  "icons": { "16": "img/twitter_16.png",
             "32": "img/twitter_32.png",
             "64": "img/twitter_64.png",
             "128": "img/twitter_128.png" },
  "browser_action": {
    "default_icon": "img/twitter_32.png"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "css": ["styles.css"],
      "js": ["js/jquery-1.7.1.min.js", "js/contentscript.js"]
    }
  ],
  "permissions": [
    "tabs",
    "*://twitter.com/*",
    "*://search.twitter.com/*",
    "*://api.twitter.com/*"
  ]
}